@using Presentation_Layer.Models.ViewModels.DepartmentViewModel

@model DepartmentViewModel

<form class="col-8" method="post" asp-controller="Departments" asp-action="@ViewBag.Action">

    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

    <div class="form-group mb-3">
        @* <label class="form-label" for="Code"></label> *@
        @* <input id="Code" name="Code" type="text" /> *@


        <label class="form-label" asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>

    </div>


    <div class="form-group mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>


    <div class="form-group mb-3">
        <label class="form-label" asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description"></textarea>
    </div>


    <div class="form-group mb-3">
        <label class="form-label" asp-for="DateOfCreation"></label>
        <input type="date" asp-for="DateOfCreation" class="form-control" />
    </div>

    @if (ViewBag.Action == "Create"){
    <div class="mt-4 m-auto">
        <input class="btn btn-primary" type="submit" value="Create" />|
        <a asp-controller="Departments"  asp-action="Index" class="btn-outline-dark">Back To List </a>
    </div>
    }
    else{
        <div class="mt-4 m-auto">
            <input class="btn btn-success" type="submit" value="Edit" />
            <a asp-controller="Departments"  asp-controller="Departments" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div>
    }
</form>